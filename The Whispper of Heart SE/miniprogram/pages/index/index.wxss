/**index.wxss**/

page {
  background: rgba(73, 185, 129, 0.1);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-image: url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1546595453349&di=d6a313d60e6278d5c58937f275864074&imgtype=0&src=http%3A%2F%2Fpic.51yuansu.com%2Fpic3%2Fcover%2F01%2F29%2F63%2F59239c4469dc2_610.jpg');
  background-position-y: 160rpx;
  background-position-x: center;
  background-size: 120% 70%;
  background-repeat: no-repeat;
}

.userinfo, .uploader, .tunnel, .mentalTest {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: rgb(255,255,255);
  opacity: 0.8;
  border: none;
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  justify-content: center;
  text-align: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader, .tunnel, .mentalTest {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
  font-weight: bolder;
}

.uploader-text, .tunnel-text {
  width: 100%;
  line-height: 52px;
  font-size: 32rpx;
  color: rgb(35, 59, 47);
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}

.tunnel {
  padding: 0 0 0 40rpx;
}

.tunnel-text {
  position: relative;
  color: #222;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.tunnel-text:first-child {
  border-top: none;
}

.tunnel-switch {
  position: absolute;
  right: 20rpx;
  top: -2rpx;
}

.disable {
  color: #888;
}

.service {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(#007aff, #0063ce);
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
  display: flex;
  align-content: center;
  justify-content: center;
  transition: all 300ms ease;
}

.service-button {
  position: absolute;
  top: 40rpx;
}

.service:active {
  box-shadow: none;
}

.request-text {
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 36rpx;
  word-break: break-all;
}

.button
{
  margin: 20rpx;
}
.scroll-x {
  display: flex;
  flex-direction: row; 
  opacity: 0.7;
}
.scroll-y {
  display: flex;
  flex-direction: column; 
  opacity: 0.7;
  border: 1px dashed #000;
}

.title
{ margin-top: 100rpx;
  text-align: center;
  font-weight: bold;
  align-items: center;
  width: 650rpx;
  height: 50rpx;
  font-size: 37rpx;
  color: rgb(35, 59, 47);
  /* background: rgba(255, 255, 255, 1); */
  /* border:1px solid rgb(106, 165, 253); */
  margin-left:25px; 
  margin-right:25px;
  
}

.green,.red,.yellow
{
  text-indent:70rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: justify;
  width: 650rpx;
  height: 400rpx;
  line-height: 22px;
  font-size: 35rpx;
  color: rgb(57, 104, 81);
  /* background: rgba(255, 255, 255, 1) url("../../figure/icon/cat.jpg") no-repeat fixed top; */
  /* background-image: url('../../../figure/icon/cat.jpg'); */
  margin-left:25px; 
