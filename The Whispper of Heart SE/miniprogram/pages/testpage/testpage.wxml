<!--miniprogram/pages/testpage.wxml-->


<view>
  <view>
    <text>问题1：{{Q1}}</text>
  </view>
  
  <view>
    <view>
      <text bindtap="chooseAnswer" data-id='1'>1.{{A1}}</text>
    </view>

    <view>
      <text bindtap="chooseAnswer" data-id='2'>2.{{A2}}</text>
    </view>

    <view>
      <text style='color: green' bindtap='submit'>提交结果</text>
    </view>

    <view>
      <text>测试结果为：</text>
      <text style='color: red'>{{testAns}}</text>
    </view>

  </view>



</view>