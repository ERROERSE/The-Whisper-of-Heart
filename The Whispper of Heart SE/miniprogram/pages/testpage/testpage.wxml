<!--miniprogram/pages/testpage.wxml-->


<view class="container">
  <view class="question">
    <text>问题{{step+1}}:{{ques}}</text>
  </view>
  <view class="explaination">
    <view >
    <text bindtap="check">检查</text>
    </view>

    <view>
    <text>选择严重程度，由1至5</text>
    </view>
  </view>

  <view class = "answer">
    <view>
      <text bindtap="chooseAnswer" data-id = '1'>1.</text>
    </view>

    <view>
      <text bindtap="chooseAnswer" data-id = '2'>2.</text>
    </view>

    <view>
      <text bindtap="chooseAnswer" data-id = '3'>3.</text>
    </view>

    <view>
      <text bindtap="chooseAnswer" data-id = '4'>4.</text>
    </view>

    <view>
      <text bindtap="chooseAnswer" data-id = '5'>5.</text>
    </view>

    <view>
      <text style='color: green' bindtap='next'>{{show}}</text>
    </view>

  </view>



</view>